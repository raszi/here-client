{
  "name": "here-client",
  "version": "0.7.0",
  "description": "HERE client",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build-validators": "typescript-json-validator --coerceTypes --validationKeywords parser --customKeywordFnName addKeyword --customKeywordPath '../ajv' src/types/**/*.ts",
    "prepack": "tsc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "mocha",
    "coverage": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raszi/here-client.git"
  },
  "keywords": [
    "here",
    "weather",
    "api",
    "client"
  ],
  "author": "Istv√°n Karaszi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raszi/here-client/issues"
  },
  "homepage": "https://github.com/raszi/here-client",
  "dependencies": {
    "ajv": "^7.1.0",
    "debug": "^4.2.0"
  },
  "devDependencies": {
    "@raszi/typescript-json-validator": "^2.5.0",
    "@types/chai": "^4.2.11",
    "@types/chai-datetime": "0.0.36",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "chai-datetime": "^1.7.0",
    "eslint": "^7.10.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "peerDependency": {
    "node-fetch": "^2.6.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "sonarjs",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:mocha/recommended",
      "plugin:sonarjs/recommended"
    ],
    "rules": {
      "mocha/no-mocha-arrows": 0,
      "mocha/no-hooks-for-single-case": 0,
      "mocha/no-setup-in-describe": 0
    },
    "ignorePatterns": [
      "dist",
      "src/types/**/*.validator.ts"
    ],
    "overrides": [
      {
        "files": "src/ajv.ts",
        "rules": {
          "sonarjs/no-duplicated-branches": 0
        }
      },
      {
        "files": "src/fetch.ts",
        "rules": {
          "@typescript-eslint/no-var-requires": 0
        }
      },
      {
        "files": "test/helper.ts",
        "rules": {
          "@typescript-eslint/no-var-requires": 0
        }
      },
      {
        "files": "test/**/*.ts",
        "rules": {
          "sonarjs/no-duplicate-string": 0
        }
      }
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "slow": 250
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage",
      "dist",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
